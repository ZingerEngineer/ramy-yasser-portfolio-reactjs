{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ESNext",
		"jsx": "react-jsx",
		"moduleResolution": "Bundler",
		"strict": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"allowSyntheticDefaultImports": true,
		"baseUrl": "./src",
		"paths": {
			"@/*": ["./*"]
		},
		"noEmit": true,
		"typeRoots": ["./src/@types", "./node_modules/@types"],
		"types": []
	},
	"include": ["src/**/*"]
}
